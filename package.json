{
  "name": "esy-cairo",
  "version": "1.16.000",
  "description": "cairo-1.16.0 packaged for esy",
  "esy": {
    "buildsInSource": true,
    "exportedEnv": {
      "PKG_CONFIG_PATH": {
        "scope": "global",
        "val": "#{self.lib / 'pkgconfig' : $PKG_CONFIG_PATH }"
      }
    },
    "buildEnv": {
      "PKG_CONFIG_PATH": "#{esy-freetype2.lib / 'pkgconfig'}:$PKG_CONFIG_PATH"
    },
    "build": [
      "find ./ -exec touch -t 200905010101 {} +",
      [
        "chmod",
        "755",
        "./configure"
      ],
      [
        "bash",
        "-c",
        "./configure --prefix=#{self.install} #{os == 'windows' ? '--host=x86_64-w64-mingw32' : ''} FREETYPE_CFLAGS='-I$FREETYPE2_INCLUDE_PATH' FREETYPE_LIBS='-L$FREETYPE2_LIB_PATH -lfreetype'"
      ],
      [
        "make"
      ],
      [
        "make",
        "install"
      ]
    ]
  },
  "dependencies": {
    "esy-libpng": "esy-packages/esy-libpng#d846df4a8547b3299c7627773008bd97543d7048",
    "esy-pixman": "esy-packages/esy-pixman#c23d29008247aeed69e20df4efc830906d553ff5",
    "esy-freetype2": "prometheansacrifice/esy-freetype2#789fccdc4e80ad467a59f3c6fe3ca9f26252c88d",
    "esy-bzip2": "esy-packages/esy-bzip2#48cb318402fb7ebc41bda9acac1a592919f44cf7"
  },
  "resolutions": {}
}
